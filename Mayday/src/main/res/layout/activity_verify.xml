<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#E8E8E8"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Verify"
    android:clickable="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/name"
                android:hint="Name"
                android:textColorHint="#000000"

                android:textColor="#000000"
                android:clickable="true"
                android:autoText="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="27pt"/>

            <EditText
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:hint="Age"
                android:textColorHint="#000000"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_marginTop="15dp"
                android:layout_alignRight="@+id/name"
                android:layout_alignEnd="@+id/name"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_marginLeft="27pt"/>

            <EditText
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:hint="Gender"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/age"
                android:layout_alignLeft="@+id/age"
                android:layout_alignStart="@+id/age"
                android:layout_alignRight="@+id/age"
                android:layout_alignEnd="@+id/age"
                android:layout_marginLeft="27pt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phone"
                android:hint="Phone Number"
                android:textColorHint="#000000"
                android:layout_marginTop="19dp"
                android:textColor="#000000"
                android:layout_below="@+id/gender"
                android:layout_alignLeft="@+id/gender"
                android:layout_alignStart="@+id/gender"
                android:layout_marginLeft="27pt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/address1"
                android:hint="Address 1"
                android:textColorHint="#000000"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/phone"
                android:layout_alignLeft="@+id/phone"
                android:layout_alignStart="@+id/phone"
                android:textColor="#000000"
                android:layout_marginLeft="27pt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/address2"
                android:hint="Address 2"
                android:textColorHint="#000000"
                android:layout_below="@+id/address1"
                android:layout_alignLeft="@+id/address1"
                android:layout_alignStart="@+id/address1"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="27pt"/>

            <EditText
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:id="@+id/medcon"
                android:hint="Medical Condition 1"
                android:textColorHint="#000000"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/address2"
                android:layout_alignLeft="@+id/address2"
                android:layout_alignStart="@+id/address2"
                android:textColor="#000000"
                android:layout_alignRight="@+id/address2"
                android:layout_alignEnd="@+id/address2"
                android:layout_marginLeft="27pt"/>

            <EditText
                android:id="@+id/blood"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/medcon"
                android:layout_alignLeft="@+id/medcon"
                android:layout_alignRight="@+id/medcon"
                android:layout_alignStart="@+id/medcon"
                android:layout_below="@+id/medcon"
                android:layout_marginLeft="27pt"
                android:layout_marginTop="18dp"
                android:hint="Blood Group"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="60pt"
                android:layout_marginTop="16dp"
                android:onClick="verify_no"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
